 %fieldset.area
    %legend Policy Area
    -# Make checkboxes from hash table for each abbreviation => name in Area class
    - Area.subjects.each do |abb,name|
      %label{ :for => abb }
        = name
      %input{ :type => "checkbox", :name => "data[area][abb]", :id => abb, :value => abb.to_s }
      %br
      
          p = params["data"]["area"] 
    @area = Area.new(
      :abb => params["data"]["area"]["abb"],
      :pae_id => @pae.id
    )
    @area.save
    
    
    contact.position
%ul.areas
  - @pae.areas.each do |area,i|
    %li.area area