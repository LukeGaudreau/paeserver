%form{ :action => "/create", :method => "post", :id => "pae" }
  %fieldset
    %legend Document
    %label(for="title") Title 
    %input{ :type => "text", :name => "pae[title]", :id => "title" }
    %br
    %label{ :for => "date" } 
      Date Published 
      %span.hint yyyymmdd
    %input{ :type => "text", :name => "pae[date]", :id => "date" }
    %br
    %label{ :for => "url" }
      URL
    %input{ :type => "text", :name => "pae[url]", :id => "url" }
    %br
    %label{ :for => "classified" } Classified?
    %input{ :type => "checkbox", :name => "pae[classified]", :id => "classified" }
  %fieldset.author
    %legend Author
    %label(for="author_huid") Harvard ID #
    %input{ :type => "text", :name => "author[][huid]", :id => "author_huid" }
    %br
    %label(for="author_fname") First Name
    %input{ :type => "text", :name => "author[][fname]", :id => "author_fname" }
    %br
    %label(for="author_lname") Last Name
    %input{ :type => "text", :name => "author[][lname]", :id => "author_lname" }
  %p
    %a.copy{ :href => "#", :rel => ".author"}
      Add an Author
  %fieldset.advisor
    %legend Advisor 
    %label(for="advisor_fname") First Name
    %input{ :type => "text", :name => "advisor[][fname]", :id => "advisor_fname" }
    %br
    %label(for="advisor_lname") Last Name
    %input{ :type => "text", :name => "advisor[][lname]", :id => "advisor_lname" }
  %p
    %a.copy{ :href => "#", :rel => ".advisor"}
      Add an Advisor
  %fieldset.client
    %legend Client
    %label(for="client_org_name") Org. Name
    %input{ :type => "text", :name => "client[][org_name]", :id => "client_org_name" }
    %br
    %label(for="client_fname") Contact First Name
    %input{ :type => "text", :name => "client[][fname]", :id => "client_fname" }
    %br
    %label(for="client_lname") Contact Last Name
    %input{ :type => "text", :name => "client[][lname]", :id => "client_lname" }    
    %br
    %label(for="client_position") Contact Position
    %input{ :type => "text", :name => "client[][position]", :id => "client_position" }
  %p
    %a.copy{ :href => "#", :rel => ".client"}
      Add a Client
  %fieldset.area
    %legend Policy Area
    -# Make checkboxes from hash table for each abbreviation => name in Area class
    - @areas.each do |area|
      %label{ :for => area.slug }
        = area.title
      %input{ :type => "checkbox", :name => "data[paes][area_slug][]", :id => area.slug, :value => area.slug }
      %br
  %input{ :type => "submit", :value => "Submit" }
