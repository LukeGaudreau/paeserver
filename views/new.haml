%form{ :action => "/create", :method => "post", :id => "pae" }
  %input{ :type => "hidden", :name => "author_count", :id => "author_count", :value => "2" }
  %fieldset
    %legend Document
    %label(for="title") Title 
    %input{ :type => "text", :name => "data[pae][title]", :id => "title" }
    %br
    %label{ :for => "date" } 
      Date Published 
      %span.hint yyyymmdd
    %input{ :type => "text", :name => "data[pae][date]", :id => "date" }
    %br
    %label{ :for => "classified" } Classified?
    %input{ :type => "checkbox", :name => "data[pae][classified]", :id => "classified" }
  %fieldset#author
    %legend Author 1
    %label(for="huid") Harvard ID #
    %input{ :type => "text", :name => "data[author][huid_1]", :id => "huid_1" }
    %br
    %label(for="fname") First Name
    %input{ :type => "text", :name => "data[author][fname_1]", :id => "fname_1" }
    %br
    %label(for="lname") Last Name
    %input{ :type => "text", :name => "data[author][lname_1]", :id => "lname_1" }
  -#%fieldset.right
    -#%legend Author 2
    -#%label(for="huid") Harvard ID #
    -#%input{ :type => "text", :name => "author[huid]", :id => "huid" }
    -#%br
    -#%label(for="fname") First Name
    -#%input{ :type => "text", :name => "author[fname]", :id => "fname" }
    -#%br
    -#%label(for="lname") Last Name
    -#%input{ :type => "text", :name => "author[lname]", :id => "lname" }
  %p 
    %a{ :href => "#", :id => "addfield" }
      Add an Author
  %input{ :type => "submit", :value => "Submit" }
